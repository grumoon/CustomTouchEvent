<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <com.grumoon.customtouchevent.ui.CustomLayout1
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="#112233" >

        <com.grumoon.customtouchevent.ui.CustomLayout2
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:background="#223344" >

            <com.grumoon.customtouchevent.ui.CustomLayout3
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:background="#334455" >

                <com.grumoon.customtouchevent.ui.CustomView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:background="#445566" />
            </com.grumoon.customtouchevent.ui.CustomLayout3>
        </com.grumoon.customtouchevent.ui.CustomLayout2>
    </com.grumoon.customtouchevent.ui.CustomLayout1>

</RelativeLayout>